<template xml:space="preserve">
    <t t-name="ClientActionTemplate">
        <div class="m-3">
            <p>
                <!-- <h2>Clicker Game</h2> -->
                Clicks:                <ClickValue/>
                <button class="mx-2 btn btn-outline-primary" t-on-click="() => this.clicker.increment(9)">Increments</button>

            </p>
            <div t-if="clicker.state.level >= 1">
                <h2>Bots</h2>
                <div class="d-flex flex-wrap">
                    <!-- Make a card / table with 2 row, header that kind of grey -->
                    <div class="card">
                        <div class="card-header bg-secondary">
                            <h5>1x ClickBots (10 clicks/10seconds) <i class="fa fa-android"></i>
                            </h5>
                        </div>
                        <div class="card-body">
                            <button class="mx-2 btn btn-primary" t-att-disabled="clicker.state.clickCount lte 1000" t-on-click="() => clicker.buyClickBot(1000)">
                                Buy ClickBot (1000 clicks)
                            </button>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </t>
</template>
